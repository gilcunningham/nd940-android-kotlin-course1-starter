<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.udacity.shoestore.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffaa55"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_marginHorizontal="50dp">
        <TextView
            android:layout_marginVertical="20dp"
            android:id="@+id/welcomeHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Welcome to the shoe store. You'll find the best shoe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/welcomeInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeHeader"
            android:text="Welcome to the shoe store. You'll find the best shoe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Button
            android:layout_marginVertical="20dp"
            android:id="@+id/instructionsLink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeInfo"
            android:text="View Listings >"
            android:onClick="@{()->viewModel.onNextScreen()}"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>